{
  "tasks": {
    "build:wasm": "deno run --allow-sys --allow-run --allow-net --allow-env --allow-write --allow-read build.ts",
    "dev": "deno run --allow-sys --allow-net --allow-run --allow-env --allow-write --allow-read src/main.ts",
    "build": "deno run build:wasm && deno compile --allow-sys --allow-net --allow-run --allow-env --allow-write --allow-read --output pgc src/main.ts",
    "install": "deno run build && mv pgc ~/.local/bin"
  },
  "imports": {
    "@eemeli/yaml": "jsr:@eemeli/yaml@^2.8.0",
    "@electric-sql/pglite": "npm:@electric-sql/pglite@^0.3.4",
    "@std/assert": "jsr:@std/assert@1",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.1",
    "@std/yaml": "jsr:@std/yaml@^1.0.8",
    "@types/node": "npm:@types/node@^24.0.7",
    "commander": "npm:commander@^14.0.0",
    "glob": "npm:glob@^11.0.3",

    "postgres": "npm:postgres@^3.4.7",
    "zod": "npm:zod@^3.25.67"
  }
}
